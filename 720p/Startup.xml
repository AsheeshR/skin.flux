<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>
		<control type="image">
			<description>solid background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>dark-red.png</texture>
		</control>
		<control type="button" id="10">
			<description>Play the startup video if required</description>
			<posx>-12</posx>
			<posy>-12</posy>
			<width>1</width>
			<height>1</height>
			<onfocus condition="Skin.HasSetting(intro-vid)">PlayMedia($ESCINFO[Skin.String(intro-vid-location)])</onfocus>
			<onfocus>ReplaceWindow(Home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<animation effect="fade" delay="1000" end="100">Focus</animation>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(intro-vid)</visible>
			<!--<animation effect="fade" end="0" delay="1500" time="500">WindowClose</animation>-->
			<control type="image">
				<description>LumenEd Logo</description>
				<posx>384</posx>
				<posy>200</posy>
				<width>512</width>
				<height>256</height>
				<aspectratio>keep</aspectratio>
				<texture>lumened-logo.png</texture>
			</control>
		</control>
		<control type="group">
		        <animation effect="fade" start="20" delay="500" time="500" pulse="true">WindowOpen</animation>
		        <animation effect="fade" start="100" delay="1000" time="500" pulse="true">WindowClose</animation>
			<control type="image">
				<description>Flux Logo</description>
				<posx>600</posx>
				<posy>550</posy>
				<width>100</width>
				<height>100</height>
				<aspectratio>keep</aspectratio>
				<texture>flux-logo-big.png</texture>
			</control>
		</control>
		<!--<control type="group">
			<animation effect="fade" end="0" delay="1600" time="400">WindowClose</animation>
			<control type="image">
				<description>Flux Logo</description>
				<posx>600</posx>
				<posy>550</posy>
				<width>100</width>
				<height>100</height>
				<aspectratio>keep</aspectratio>
				<texture>flux-logo-big.png</texture>
			</control>
		</control>-->
	</controls>
</window>
